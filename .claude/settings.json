{
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "forgetful@scottrbk": true,
    "context7@context7": true,
    "context-hub@scottrbk": true
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File \"$CLAUDE_PROJECT_DIR/.claude/hooks/Invoke-SessionStartMemoryFirst.ps1\"",
            "statusMessage": "Enforcing ADR-007 memory-first requirements"
          },
          {
            "type": "command",
            "command": "pwsh -NoProfile -File \"$CLAUDE_PROJECT_DIR/.claude/hooks/Invoke-ADRChangeDetection.ps1\"",
            "statusMessage": "Checking for ADR changes"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File \"$CLAUDE_PROJECT_DIR/.claude/hooks/Invoke-UserPromptMemoryCheck.ps1\"",
            "statusMessage": "Checking memory-first compliance"
          }
        ]
      }
    ]
  }
}
